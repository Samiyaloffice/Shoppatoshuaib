<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="20dp"
    app:cardElevation="5dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Ticket No:"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/cell_trouble_ticket_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="000"
                android:layout_marginStart="10dp"
                android:textStyle="bold"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/cell_trouble_ticket_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of Applied"
                android:textColor="#A8A8A8"
                android:textSize="12dp"
                android:layout_weight="0"/>

        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/cell_trouble_ticket_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Ticket Title"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/cell_trouble_ticket_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Ticket Description"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>