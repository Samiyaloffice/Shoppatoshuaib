<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:background="#D8D8D8"/>

    <LinearLayout
        android:id="@+id/cell_chating_user_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="end"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="gone">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/cell_chating_reply_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textAlignment="textEnd"
            android:textSize="16dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/cell_chating_reply_message_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Date And Time Of message"
            android:textAlignment="textEnd" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/red"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/cell_chating_reply_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="User Message"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/cell_chating_reply_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:visibility="visible">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/cell_chating_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:textSize="16dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/cell_chating_user_message_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="10dp"
            android:text="Date And Time Of message" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="5dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            app:cardElevation="5dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/cell_chating_user_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="User Message" />

        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>

</RelativeLayout>